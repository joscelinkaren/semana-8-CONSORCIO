
# SISTEMA DE REGISTRO INTERNO DE COMPRAS Y VENTAS

print("SISTEMA DE REGISTRO INTERNO DE CONSORCIO MARY E.I.R.L.")

rol = input("Ingrese su rol (dueño/vendedor): ")

# Lista de categorias
categorias = ["Listones", "Vigas", "OSB", "Triplay", "Fenolico", "Calaminas", "Otros"]

# Mostrar categorias
def mostrar_categorias():
    print("\n CATEGORÍAS DISPONIBLES")
    for i in range(len(categorias)):
        print(f"{i + 1}. {categorias[i]}")
    

# para el rol DUEÑO
if rol == "dueño":
    opcion = 0
    while opcion != 3:
        print("\n AREA DE COMPRAS")
        print("1. Registrar compra")
        print("2. Ver categorías de productos")
        print("3. Salir")
        opcion = int(input("Seleccione una opción: "))

        if opcion == 1:
            proveedor = input("Ingrese nombre del proveedor: ")
            mostrar_categorias()
            categoria = int(input("Seleccione una categoría (1-7): "))
            
            if 1 <= categoria <= len(categorias):
                nombre_categoria = categorias[categoria - 1]
                producto = input("Ingrese nombre del producto de compra: ")
                cantidad = int(input("Ingrese cantidad comprada: "))
                costo_unitario = float(input("Ingrese costo unitario (S/.): "))
                total = cantidad * costo_unitario

                print("\n COMPRA REGISTRADA")
                print(f"Proveedor  : {proveedor}")
                print(f"Categoría  : {nombre_categoria}")
                print(f"Producto   : {producto}")
                print(f"Cantidad   : {cantidad}")
                print(f"Costo unitario  : S/. {costo_unitario:.2f}")
                print(f"TOTAL COMPRA: S/. {total:.2f}")
            else:
                print("Categoría inválida.")
        
        elif opcion == 2:
            mostrar_categorias()
        elif opcion == 3:
            print("Saliendo del sistema")
        else:
            print("Intente nuevamente")

# para el rol VENDEDOR 
elif rol == "vendedor":
    opcion = 0
    while opcion != 3:
        print("\n AREA DE VENTAS")
        print("1. Registrar venta")
        print("2. Ver categorías de productos")
        print("3. Salir")
        
        opcion = int(input("Seleccione una opción: "))

        if opcion == 1:
            cliente = input("Ingrese nombre del cliente: ")
            
            #preguntar si requiere boleta o factura
            comprobante=input("¿Desea comprobante? (si/no):")
            if comprobante == "si" or comprobante =="si":
                generar_comprobante="el cliente solicito comprobante"
            else:
                genrerar_comprobante="el cliente no desea comprobante"
            
            mostrar_categorias()
            categoria = int(input("Seleccione una categoría (1-7): "))

            if 1 <= categoria <= len(categorias):
                nombre_categoria = categorias[categoria - 1]
                producto = input("Ingrese nombre del producto vendido: ")
                cantidad = int(input("Ingrese cantidad vendida: "))
                precio_unitario = float(input("Ingrese precio unitario (S/.): "))
                total = cantidad * precio_unitario

                print("\n VENTA REGISTRADA")
                print(f"Cliente    : {cliente}")
                print(f"Categoría  : {nombre_categoria}")
                print(f"Producto   : {producto}")
                print(f"Cantidad   : {cantidad}")
                print(f"Precio u.  : S/. {precio_unitario:.2f}")
                print(f"TOTAL VENTA: S/. {total:.2f}")
            else:
                print("Categoría inválida.")
        
        elif opcion == 2:
            mostrar_categorias()
        elif opcion == 3:
            print("Saliendo del sistema")
        else:
            print("Intente nuevamente")

# Rol no válido
else:
    print("Rol no reconocido")

